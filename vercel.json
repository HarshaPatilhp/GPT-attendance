{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node@3.0.0",
      "config": {
        "includeFiles": ["netlify/functions/**"],
        "maxDuration": 10,
        "memory": 1024
      }
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api"
    },
    {
      "src": "^/(?<path>.+\\.(js|css|png|jpg|jpeg|gif|ico|json|txt|svg|woff|woff2|ttf|eot))$",
      "headers": {
        "cache-control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "^/(?!api)(?<path>.*)$",
      "dest": "/index.html"
    }
  ],
  "build": {
    "env": {
      "NODE_VERSION": "20.x"
    }
  }
}
